proc            /proc           proc            defaults 0 0
devpts		/dev/pts	devpts		mode=0622       0 0

# we don't use dump, therefore fs_dump=0
# the root fs should have fs_passno=1, others 2 or above;
# fs_passno=0 indicates that the fs should not be checked

